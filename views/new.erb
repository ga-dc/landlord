<h2>Add New Apartment</h2>

<form action="/apartments" method="post">
  <label for="apartment[address]">Address:</label>
  <input type="text" name="apartment[address]">
  <br><br>
  <label for="apartment[monthly_rent]">Rent:</label>
  <input type="number" name="apartment[monthly_rent]">
  <br><br>
  <label for="apartment[sqft]">Square feet:</label>
  <input type="number" name="apartment[sqft]">
  <br><br>
  <label for="apartment[num_beds]">Number of beds:</label>
  <input type="number" name="apartment[num_beds]">
  <br><br>
  <label for="apartment[num_baths]">Number of baths:</label>
  <input type="number" name="apartment[num_baths]">
  <br><br>
  <input type="submit" value="Submit">
</form>
