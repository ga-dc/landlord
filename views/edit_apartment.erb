<h1>Edit the Apartment</h1>

<form action="/apartments/<%= @apartment.id %>" method="post">
<input type="hidden" name="_method" value="put">

  <h3>Address: <input name="apartment[address]" value="<%= @apartment.address %>"></h3>
  <h3>Monthly Rent: <input name="apartment[monthly_rent]" value="<%= @apartment.monthly_rent %>"></h3>
  <h3>Square Feet: <input name="apartment[sqft]" value="<%= @apartment.sqft %>"></h3>
  <h3>Bedrooms: <input name="apartment[num_beds]" value="<%= @apartment.num_beds %>"></h3>
  <h3>Bathrooms: <input name="apartment[num_baths]" value="<%= @apartment.num_baths %>"></h3>
  <input type="submit" value="Update Apartment">
</form>

