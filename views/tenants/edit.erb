<h2>Edit this tenant</h2>
<form action="/tenants/<%= @tenant.id%>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name:</label>
  <input type="text" name="tenant[name]" value ="<%= @tenant.name%>">

  <label>Age:</label>
  <input type="text" name="tenant[age]" value ="<%= @tenant.age%>">

  <label>Gender:</label>
  <input type="text" name="tenant[gender]" value ="<%= @tenant.gender%>">

  <label>Apartment ID:</label>
  <select name="tenant[apartment_id]">
    <% Apartment.all.each do |apt|%>
    <option value="<%= apt.id%>"><%= apt.address%></option>
    <% end%>
  </select>
  <!-- <input type="text" name="tenant[apartment_id]" value ="<%= @tenant.apartment_id%>"> -->
  <input type="submit" value="Update">
</form>


<h3>DELETE this tenant</h3>
<form action="/tenants/<%= @tenant.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
