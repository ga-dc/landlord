<h1>Edit Tenant</h1>

<form method="post" action="/tenants">
  <div class="form_div">
    <label for="name">Full Name: </label>
    <input type="text" name="name" id="name" value="<%= @tenant_details.name %>" placeholder="name">
  </div>

  <div class="form_div">
    <label for="age">Age: </label>
    <input type="text" name="age" id="age" value="<%= @tenant_details.age %>" placeholder="age">
  </div>

  <div class="form_div">
    <label for="gender">Gender: </label>
    <input type="text" name="gender" id="gender" value="<%= @tenant_details.gender %>" placeholder="gender">
  </div>

  <div class="form_div">
    <label for="apt_id">Apartment ID: </label>
    <input type="text" name="apt_id" id="apt_id" value="<%= defined?(@tenant_details.apartment.address) ? @tenant_details.apartment.address : "none" %>" placeholder="apt_id">
  </div>

  <input type="submit" class="submit add_link">
</form>
