<form action="/tenants" method="post">

  <label>Name</label>
  <input type="text" name="tenant[name]">
  <label>Age</label>
  <input type="text" name="tenant[age]">
  <label>Gender</label>
  <input type="text" name="tenant[gender]">
  <br><br><label>Residence</label><br>
  <% @apartments.each do |apartment| %>
    <input type="radio" name="tenant[apartment_id]" value="<%= apartment.id %>">
    <label><%= apartment.address %></label><br>
  <% end %>

  <input type="submit" value="Create tenant">
</form>
