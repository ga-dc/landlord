<h2>Edit Apartment: <%= @apt.address %></h2>

<form action="/apartments/<%=@apt.id%>" method="post" >
  <input type="hidden" name="_method" value="put">
  <label>Address:</label>
  <input name="apartment[address]" value="<%=@apt.address%>">

  <label>Rent:</label>
  <input name="apartment[monthly_rent]" value="<%=@apt.monthly_rent%>">

  <label>Square Footage:</label>
  <input name="apartment[sqft]" value="<%=@apt.sqft%>">

  <label>Beds:</label>
  <input name="apartment[num_beds]" value="<%=@apt.num_beds%>">

  <label>Baths:</label>
  <input name="apartment[num_baths]" value="<%=@apt.num_baths%>">

  <input type="submit" value="Save">
</form>
