<h2>Edit #<%= @apartment.id %> - <%= @apartment.address %> </h2>
<form action="/apartments/<%= @apartment.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="apartment[address]">Address:</label>
  <input name="apartment[address]" value="<%= @apartment.address %>">

  <label>Rent:</label>
  <input name="apartment[monthly_rent]" value="<%= @apartment.monthly_rent %>">

  <label>Square Feet:</label>
  <input name="apartment[sqft]" value="<%= @apartment.sqft %>">

  <label>Bedrooms:</label>
  <input name="apartment[num_beds]" value="<%= @apartment.num_beds %>">

  <label>Bathrooms:</label>
  <input name="apartment[num_baths]" value="<%= @apartment.num_baths %>">

  <input type="submit" value="Update">
</form>
