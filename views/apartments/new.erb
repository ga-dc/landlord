<h1>Add new apartment</h1>

<form method="post" action="/apartments">
  <label for="address">Full Address: </label>
  <input type="text" name="address" id="address">

  <label for="monthly_rent">Monthly Rent: </label>
  <input type="text" name="monthly_rent" id="monthly_rent">

  <label for="sqft">Total Square Footage: </label>
  <input type="text" name="sqft" id="sqft">

  <label for="num_beds">Beds: </label>
  <input type="text" name="num_beds" id="num_beds">

  <label for="num_baths">Baths: </label>
  <input type="text" name="num_baths" id="num_baths">

  <input type="submit">
</form>
