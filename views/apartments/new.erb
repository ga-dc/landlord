<h2>New Apartment</h2>

<form action="/apartments" method="post">
  <label>Address:</label>
  <input name="apartment[address]">
  <label>Monthly Rent:</label>
  <input name="apartment[monthly_rent]">
  <label>Square Feet:</label>
  <input name="apartment[sqft]">
  <label>Number of Bedrooms:</label>
  <input name="apartment[num_beds]">
  <label>Number of Bathrooms:</label>
  <input name="apartment[num_baths]">
  <input type="submit" value="Add Apartment">
</form>
