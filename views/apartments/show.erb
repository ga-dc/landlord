<div class="apartment">
  <h1><%= @apartment.address %></h1>
  <h2>$<%= @apartment.monthly_rent %>.00 / Month </h2>
  <h2>Bedrooms: <%= @apartment.num_beds %></h2>
  <h2>Bathrooms: <%= @apartment.num_baths %></h2>
  <h2>Size: <%= @apartment.sqft %> sqft</h2>
  <a class="button" href="/apartments/<%= @apartment.id %>/edit">Edit</a>
</div>

<div>
  <h2>Tenants</h2>
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Age
        </th>
        <th>
          Gender
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tenants.each do |tenant| %>
      <tr>
        <td>
          <%= tenant.name %>
        </td>
        <td>
          <%= tenant.age %>
        </td>
        <td>
          <%= tenant.gender %>
        </td>
      </tr>
      <% end  %>
    </tbody>
  </table>
</div>
