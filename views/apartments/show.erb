<h1>Apartment <%= params[:id]%></h1>
<p>
  Address: <%= @apartments.find(@id)[:address] %>
</p>

<p>
  Monthly Rent: $<%= @apartments.find(@id)[:monthly_rent] %>
</p>

<p>
  Square feet: <%= @apartments.find(@id)[:sqft] %>
</p>

<p>
  Bedrooms: <%= @apartments.find(@id)[:num_beds] %>
</p>

<p>
  Bathrooms: <%= @apartments.find(@id)[:num_baths] %>
</p>

<h2>Tenants</h2>

<ul>
  <% tenants = @tenants.where(apartment_id: @id) %>
  <% tenants.each do |tenant| %>
    <% if tenant[:apartment_id] == params[:id].to_i %>
        <li><%= tenant[:name]%></li>
    <% end %>
  <% end %>
</ul>
